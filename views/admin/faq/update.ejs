<div class="pt-3 pb-3 pl-3">
    <h4>Tahrirlash</h4>
</div>

<div class="row">
    <div class="col-md-12 mt-3"
        style="display: flex; flex-direction: row; justify-content: space-between; flex-wrap: wrap;">
        <form method="POST" action="<%=`/api/faq/${result._id}?_method=PUT`%>" class="col-md-8">
            <div class="mb-3">
                <label>Sarlavha</label>
                <input name="titleuz" type="text" class="form-control" value="<%= result.title.uz %>"  />
            </div>
            <div class="mb-3">
                <label>Заголовок</label>
                <input name="titleru" type="text" class="form-control" value="<%= result.title.ru %>"  />
            </div>
            <div class="mb-3">
                <label>Tavsif</label>
                <textarea name="descriptionuz" class="form-control" cols="20" rows="10"><%= result.description.uz %></textarea>
            </div>
            <div class="mb-3">
                <label>Описание</label>
                <textarea name="descriptionru" class="form-control" cols="20" rows="10"><%= result.description.ru %></textarea>
            </div>
            <button type="submit" class="btn btn-primary col-md-5 mt-3">Saqlash</button>
        </form>


    </div>

</div>
