    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/axios.min.js"></script>
    <script src="/script/index.js"></script>
    <script>
        
        function reload_all() {
            location.reload()
        }
        // Ro'yhatdan o'tish
        const register = document.getElementById('register');
        
        const fullName = document.getElementById('input1')
        const password = document.getElementById('input4')
        const phone = document.getElementById('input3')
        function register_best() {
            if (fullName.value == "" || password.value == "" || phone.value == "") {
                document.getElementById('back_register').style.display = 'none'
                document.getElementById('error_filling').style.display = 'block'
                document.getElementById('error_filling').style.zIndex = '111111111111111111111111111'
            }
            axios({
                url: "/api/user/create",
                method: "POST",
                data: {
                    fullName: fullName.value,
                    password: password.value,
                    phone: phone.value
                }
            }).then(res => {
                document.getElementById('back_register').style.display = 'none'
                document.getElementById('register_modal').style.display = 'block'
            })
        }
        // Avtorizatsiyadan o'tish
        const login_send = document.getElementById('login_send');
        const login_phone = document.getElementById('login_phone')
        const login_password = document.getElementById('login_password')
        login_send.addEventListener("click", () => {
            if (login_phone.value == "" || login_password.value == "") {
                document.getElementById('back_login').style.display = 'none'
                document.getElementById('error_filling').style.display = 'block'
                document.getElementById('error_filling').style.zIndex = '111111111111111111111111111'
            }
            axios({
                url: "/api/user/login",
                method: "POST",
                data: {
                    phone: login_phone.value,
                    password: login_password.value,
                }
            }).then(res => {
                document.getElementById('back_login').style.display = 'none'
                document.getElementById('login_modal').style.display = 'block'
            })
            .catch((error) => {
                document.getElementById('back_login').style.display = 'none'
                document.getElementById('login_modal_error').style.display = 'block'
            })
            
        })
        
        // Kontakt orqali aloqa qilish
        const sendContact = document.getElementById('sendContact');
        const tel = document.getElementById('nomer')
        const name = document.getElementById('ism')
        const message = document.getElementById('matn')
        sendContact.addEventListener("click", () => {
            axios({
                url: "/api/contact/add",
                method: "POST",
                data: {
                    tel: tel.value,
                    name: name.value,
                    message: message.value
                }
            }).then(res => {
                // console.log(res)
                location.reload()
            })
        })
    </script>
