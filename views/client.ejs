    <style>
        .success_register {
            border-radius: 10px;
            font-family: Arial, Helvetica, sans-serif;
            position: fixed;
            width: 50%;
            height: 200px;
            top: 25%;
            left: 25%;
            right: 25%;
            background-color: #F9CA48;
            z-index: 10000000000000000000000;
            display: none;
        }
        .flexing {
            width: 100%;
            height: 200px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .success_register p {
            font-size: 23px;
            font-weight: 600;
            text-align: center;
        }
        .btn_register {
            border: none;
            outline: none;
            margin-top: 30px;
            padding: 10px 30px;
            background-color: #000000;
            color: white;
            font-weight: 600;
            border-radius: 10px;
        }
    </style>


</head>

