<div class="recommend">
    <div class="recommend_title">
        <span>
            <%= translation.tavv %>
        </span>
    </div>
    <div class="recommend_carousel">
        <div class="left_arrow_1"><img src="/images/left-arrow.png" alt=""></div>
        <div class="recommend_wrapper">
            <ul class="recommend_cards" data-target="recommend_carousel">


                <% for (let item of result) {%>
                    <li class="recommend_card" data-target="recommend_card">
                        <div class="box">
                            <a href="/product/<%=item?._id  %>">
                                <div class="card_head">
                                    <p>
                                        <%= translation.tavv %>
                                    </p>
                                </div>
                                <div class="card_icon">
                                    <img src="<%= item?.poster  %>" alt="">
                                </div>
                                <div class="about_product">
                                    <% if(lang==='uz' ){ %>
                                        <p>
                                            <%= item?.categoryID?.name?.uz %>
                                        </p>
                                        <% } %>
                                            <% if(lang==='ru' ){ %>
                                                <p>
                                                    <%= item?.categoryID?.name?.ru %>
                                                </p>
                                                <% }%>
                                                    <% if(lang==undefined ){ %>
                                                        <p>
                                                            <%= item?.categoryID?.name?.uz %>
                                                        </p>
                                                        <% } %>

                                                            <% if(lang==='uz' ){ %>
                                                                <p>
                                                                    <%= item?.name?.uz %>
                                                                </p>
                                                                <% } %>
                                                                    <% if(lang==='ru' ){ %>
                                                                        <p>
                                                                            <%= item?.name?.ru %>
                                                                        </p>
                                                                        <% }%>
                                                                            <% if(lang==undefined ){ %>
                                                                                <p>
                                                                                    <%= item?.name?.uz %>
                                                                                </p>
                                                                                <% } %>
                                </div>
                            </a>
                            <div class="sharxlar">
                                <div>
                                    <img onclick="mark('<%= item?._id %>', 1)" src="/images/Star 11.png" alt="">
                                    <img onclick="mark('<%= item?._id %>', 2)" src="/images/Star 11.png" alt="">
                                    <img onclick="mark('<%= item?._id %>', 3)" src="/images/Star 11.png" alt="">
                                    <img onclick="mark('<%= item?._id %>', 4)" src="/images/Star 11.png" alt="">
                                    <img onclick="mark('<%= item?._id %>', 5)" src="/images/Star 11.png" alt="">
                                </div>
                                <div>
                                    <img src="/images/comment.png" alt="">
                                    <p class="comment_number">0</p>
                                    <p>
                                        <%= translation.sharhlar %>
                                    </p>
                                </div>
                                <p></p>
                            </div>
                            <div class="price">
                                <p>
                                    <%= translation.pag %>:
                                </p>
                                <p class="summa">
                                    <%= item?.price %>
                                </p>
                                <p>
                                    <%= translation.som %>
                                </p>
                            </div>
                            <div class="card_btn"><button onclick="savatchaga_qoshish('<%= item?._id %>')">
                                    <%= translation.savatcha %>
                                </button></div>
                        </div>
                    </li>
                    <% } %>


            </ul>
        </div>
        <div class="right_arrow_1"><img src="/images/right-arrow.png" alt=""></div>

    </div>
</div>